<h1>Project Details</h1>
<%= form_for(@project) do |p| %>
    <div class="field">
      <%= p.label :Name  %><br />
      <%= p.text_field :name %>
    </div>
    <div class="field">
      <%= p.label :Domain %><br />
      <%= p.text_field :domain %>
    </div>
    <div class="field">
      <%= p.label :Git_URL %><br />
      <%= p.text_field :git_url %>
    </div>
    <div class="field">
      <%= p.label :Project_Management_Tool  %><br />
      <%= p.text_field :project_mgt_tool %>
    </div>
    <div class="actions">
      <%= p.submit "Update" %>
    </div>
<% end %>