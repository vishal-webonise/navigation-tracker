<h1 xmlns="http://www.w3.org/1999/html">Dashboard</h1>
<hr>
<ul class="nav nav-tabs">
  <li class="active"><a href="#new_project">Add new project</a></li>
  <li><a href="#all_projects">My Projects</a></li>

  <li><a href="#assign_users">Assign Users</a></li>
</ul>
 
<div class="tab-content">
  <div class="tab-pane active" id="new_project">
  	<%= render partial: 'new_project', 
  			:locals => { :project => @project } 
	%>
  </div>
  <div class="tab-pane" id="all_projects">

    <% @user.projects.each do |project| %>
        <% unless project.new_record?%>
        <tr>
          <%= project.name %>
          <%= link_to "Show",project_path(project.id) %>
          <%= link_to "Update", :controller => "projects", :action => "edit", :id => project.id %><br>
        </tr>
            <% end %>

    <% end %>
  </div>
  <div class="tab-pane" id="assign_users">
  	<%#= render partial: 'assign_project_users' %>
    <label>My Projects: </label><input type="text" id="select_project"><br>
    <label>Users: </label><input type="text" id="select_users">
  </div>
</div>
 