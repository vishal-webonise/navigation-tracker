<h1>Forgot your password? <small>don't worry, let's reset it!</small></h1>
<hr>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email %>
      <span class="help-inline"> Password reset instructions will be sent on this address</span>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Reset Password", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
