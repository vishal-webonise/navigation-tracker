<div class="row">
  <aside class="span3">
    <%= render partial: 'shared/index_sidebar_content' %>
  </aside>
  <div class="span9">
    <section class="page-header">
      <h1>Manage Users</h1>
    </section>
    <% if @users.any? %>
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Name</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
              <tr>
                <td><%= user.name %>
                  <small>(<%= user.projects.count %> projects)</small>
                </td>
                <td>
                  <%= link_to "Profile", user_path(user), class: "btn btn-mini" %>

                  <%= link_to "Delete", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-mini btn-danger" %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% else %>
        <div class="well well-large">
          There are no users registered yet!
        </div>
    <% end %>
  </div>
</div>